<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.login2.MainActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="5dp">

        <EditText
            android:id="@+id/edContra"
            android:layout_width="294dp"
            android:layout_height="42dp"
            android:layout_above="@+id/btnLogin"
            android:layout_alignEnd="@+id/edCorreo"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="357dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edCorreo"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="48dp"
            android:text="Correo:"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="238dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="231dp"
            android:layout_height="182dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="34dp"
            android:layout_above="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edContra"
            android:layout_alignStart="@+id/edContra"
            android:layout_marginBottom="12dp"
            android:text="ContaseÃ±a:"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="330dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/edContra"
            android:text="Login"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="427dp" />

        <EditText
            android:id="@+id/edCorreo"
            android:layout_width="298dp"
            android:layout_height="49dp"
            android:layout_above="@+id/textView"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="268dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
