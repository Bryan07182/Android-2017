<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.fernando.finalmoviles1.MainActivity">


    <TextView
        android:id="@+id/textViewesp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:text="@string/busqueda_por_especialidad"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/spinnerEsp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/textViewesp"
        android:layout_below="@+id/textViewesp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textViewHosp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewesp"
        android:layout_below="@+id/spinnerEsp"
        android:layout_marginTop="23dp"
        android:text="@string/busqueda_por_hospital" />

    <Spinner
        android:id="@+id/spinnerHosp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHosp"
        android:layout_marginTop="15dp" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerHosp"
        android:layout_marginTop="26dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

</RelativeLayout>
