<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.primo.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="497dp"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnComprobar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp"
            android:text="Resultado"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnComprobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edNumero"
            android:layout_marginStart="28dp"
            android:layout_marginTop="37dp"
            android:text="Comprobar" />

        <EditText
            android:id="@+id/edNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnComprobar"
            android:layout_marginTop="61dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edNumero"
            android:layout_marginTop="33dp"
            android:text="Ingrese un numero:" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
